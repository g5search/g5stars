<h1>Listing volunteers</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @volunteers.each do |volunteer| %>
  <tr>
	<td><%= image_tag("#{volunteer.photo_url}", {width: 75}) %></td>  
    <td><%= volunteer.full_name %></td>
	<td><%= render partial: 'star', collection: volunteer.stars %></td>
	<%# these should only show for adminsitrator%>
    <%#= link_to 'Show', volunteer %>
    <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %> |
		<%= link_to 'Destroy', volunteer, confirm: 'Are you sure?', method: :delete %> |
		<%= link_to 'Add Star', new_volunteer_star_path(volunteer) %></td>

  </tr>
<% end %>
</table>

