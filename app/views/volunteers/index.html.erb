<h1>Listing volunteers</h1>
<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @volunteers.each do |volunteer| %>
  <tr>
	<td><%= image_tag("#{volunteer.photo_url}", {width: 75}) %></td>
  <td><%= link_to("#{volunteer.full_name}", volunteer_path(volunteer)) %></td>
	<td><%= render partial: 'stars/star', collection: volunteer.stars.this_year.ordered %></td>
	<td><%= render(partial: 'record_admin', locals: {volunteer: volunteer}) if signed_in? %></td>

  </tr>
<% end %>
</table>
<br />

<% if signed_in? %>
  <%= link_to('New Volunteer', new_volunteer_path) %>
  <%= link_to "New Activity", new_activity_path %>
<% end %>
