<%= form_for @activity, html: { class: 'well' } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <table>
  <%= f.fields_for :stars, @activity.initialized_stars do |builder| %>
    <tr class="form-inline">
        <% volunteer = builder.object.volunteer %>
        <%= builder.hidden_field :volunteer_id %>

      <td>
      <%= builder.check_box :enable %>
      <%= builder.label :enable, volunteer.full_name, :class => "heckbox" %>
      </td>

      <td>
      <%= builder.label :board_member, "Role" %>
      <%= builder.select :board_member, [['Board Member','true'], ['Volunteer','false']] %>
      </td>

      <td>
      <%= builder.label :time_spent %>
      <%= builder.text_field :time_spent, class: 'span1' %>
      </td>
    </tr>
  <% end %>
  </table>
  <%= f.submit %>
<% end %>
